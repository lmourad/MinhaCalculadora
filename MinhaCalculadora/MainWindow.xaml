<Window x:Class="MinhaCalculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinhaCalculadora"
        mc:Ignorable="d"
        Title="Calculadora" Height="450" Width="350">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,62,0,0" TextWrapping="Wrap" Text="Usuário:" VerticalAlignment="Top" FontSize="24"/>
        <TextBox x:Name="textbox_usuario" HorizontalAlignment="Center" Margin="0,99,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" FontSize="22" BorderBrush="#FF1F9400" Background="White" BorderThickness="2,2,2,2" Height="30"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,163,0,0" TextWrapping="Wrap" Text="Senha:" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="button_entrar" Content="ENTRAR" HorizontalAlignment="Center" Margin="0,292,0,0" VerticalAlignment="Top" Height="38" Width="70" Background="White" Click="Button_Click" BorderBrush="Red" BorderThickness="2,2,2,2"/>
        <PasswordBox x:Name="passwordbox_senha" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Width="250" Height="30" BorderBrush="#FF1F9400" FontSize="22" BorderThickness="2,2,2,2"/>

    </Grid>
</Window>
